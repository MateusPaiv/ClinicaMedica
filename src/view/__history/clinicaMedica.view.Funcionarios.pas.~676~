  edtEndereco.Enabled := false;
  cmbCargo.Enabled := false;
  edtBairro.Enabled := false;
  edtMunioipio.Enabled := false;
  edtUf.Enabled := false;
  edtNumero.Enabled := false;
  edtComplemento.Enabled := false;
